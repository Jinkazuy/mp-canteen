.evaluate-list-item {
  width: 100%;
  border-bottom: 1rpx solid #eee;
  padding: 38rpx 0 30rpx;
}
.evaluate-list-item .item-head {
  height: 96rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.evaluate-list-item .item-head .user-avatar {
  -webkit-flex-basis: 96rpx;
          flex-basis: 96rpx;
  height: 96rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.evaluate-list-item .item-head .user-title-and-date {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 100%;
  position: relative;
}
.evaluate-list-item .item-head .user-title-and-date .user-title-box .username {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1;
}
.evaluate-list-item .item-head .user-title-and-date .evaluate-date {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  color: #666;
}
.evaluate-list-item .item-text {
  padding-left: 120rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #666;
}

