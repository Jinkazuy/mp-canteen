.goods-card-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 230rpx;
  padding: 0 20rpx 0;
  box-sizing: border-box;
  background-color: #fff;
}
.goods-card-item .goods-card-item-img-box {
  width: 170rpx;
  height: 170rpx;
  margin-right: 20rpx;
}
.goods-card-item .goods-card-item-img-box ._img {
  width: 100%;
  height: 100%;
}
.goods-card-item .goods-card-item-text-box {
  position: relative;
  width: 64%;
  height: 170rpx;
  line-height: 1;
}
.goods-card-item .goods-card-item-text-box .goods-card-item-text-box-goods-title {
  font-size: 30rpx;
  color: #666;
  font-weight: 700;
  margin: 18rpx 0;
}
.goods-card-item .goods-card-item-text-box .goods-card-item-text-box-goods-info {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 14rpx;
}
.goods-card-item .goods-card-item-text-box .goods-card-item-text-box-sales-count {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 18rpx;
}
.goods-card-item .goods-card-item-text-box .goods-card-item-text-box-sales-price {
  height: 40rpx;
}
.goods-card-item .goods-card-item-text-box .goods-card-item-text-box-sales-price .price {
  line-height: 40rpx;
  color: #fc5858;
  font-size: 24rpx;
}
.goods-card-item .goods-card-item-text-box .add-sub-btn-box {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 140rpx;
  height: 40rpx;
}

