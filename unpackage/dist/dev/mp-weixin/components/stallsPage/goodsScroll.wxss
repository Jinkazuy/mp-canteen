.goods-scroll-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffc0cb;
  width: 100%;
}
.goods-scroll-wrapper .goods-scroll-left {
  width: 200rpx;
  z-index: 2;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  background-color: #f9f9f9;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}
.goods-scroll-wrapper .goods-scroll-left .category-menu-items {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  background-color: #f9f9f9;
  padding: 36rpx 0 36rpx 52rpx;
  box-sizing: border-box;
}
.goods-scroll-wrapper .goods-scroll-left .category-menu-items ._p {
  width: 80%;
  font-size: 24rpx;
  line-height: 1.4;
  color: #666;
}
.goods-scroll-wrapper .goods-scroll-left .category-menu-items-active {
  color: #0177bf;
  background-color: #fff;
}
.goods-scroll-wrapper .goods-scroll-left .spac-d {
  height: 80rpx;
  width: 100%;
}
.goods-scroll-wrapper .goods-scroll-right {
  height: 100%;
  position: absolute;
  z-index: 1;
  padding-left: 200rpx;
  box-sizing: border-box;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}
.goods-scroll-wrapper .goods-scroll-right .category-items {
  width: 100%;
}
.goods-scroll-wrapper .goods-scroll-right .category-items .category-items-title {
  width: 100%;
  height: 52rpx;
  padding-left: 20rpx;
  background-color: #f3f5f7;
  border-left: 8rpx solid #d9dde1;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #666;
  line-height: 52rpx;
}

