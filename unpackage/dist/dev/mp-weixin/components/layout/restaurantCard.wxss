.canteen-card-wrapper {
  width: 100%;
}
.canteen-card-wrapper .canteen-card-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 30rpx;
  box-sizing: border-box;
}
.canteen-card-wrapper .canteen-card-info .canteen-pic {
  -webkit-flex-basis: 130rpx;
          flex-basis: 130rpx;
  height: 130rpx;
  border: 1rpx solid #eee;
}
.canteen-card-wrapper .canteen-card-info .canteen-pic ._img {
  width: 100%;
  height: 100%;
}
.canteen-card-wrapper .canteen-card-info .canteen-card-text-group {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.canteen-card-wrapper .canteen-card-info .canteen-card-text-group .canteen-card-text-group-title {
  line-height: 1;
  color: #0f0808;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}
.canteen-card-wrapper .canteen-card-info .canteen-card-text-group .canteen-card-text-group-score {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  line-height: 1;
  margin-bottom: 36rpx;
}
.canteen-card-wrapper .canteen-card-info .canteen-card-text-group .canteen-card-text-group-score .score-number {
  font-size: 24rpx;
  color: #f46050;
  margin-right: 20rpx;
}
.canteen-card-wrapper .canteen-card-info .canteen-card-text-group .canteen-card-text-group-score .score-count {
  font-size: 24rpx;
  color: #999;
}
.canteen-card-wrapper .canteen-card-info .canteen-card-text-group .label {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  height: 30rpx;
}
.canteen-card-wrapper .canteen-card-info .canteen-card-text-group .label ._li {
  height: 100%;
  padding: 4rpx 20rpx;
  box-sizing: border-box;
  border-radius: 4rpx;
  border: 1px solid #a0a0a0;
  line-height: 1;
  margin-right: 10rpx;
  font-size: 20rpx;
  color: 999;
}
.canteen-card-wrapper .canteen-card-info .canteen-card-text-group .distance {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  color: #999;
}
.canteen-card-wrapper .space-one {
  width: 100%;
  height: 1rpx;
  background-color: #eee;
}

