.me-balance {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-top: 70rpx;
  box-sizing: border-box;
  line-height: 1;
}
.me-balance .balance-icon-box {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}
.me-balance .balance-icon-box ._img {
  width: 100%;
  height: 100%;
}
.me-balance .balance-tit {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.me-balance .balance-num {
  font-size: 72rpx;
  color: #333;
  margin-bottom: 170rpx;
}
.me-balance .btn-recharge,
.me-balance .btn-cash-withdrawal {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.me-balance .van-button--primary {
  margin: 30rpx auto 0 !important;
  width: 300rpx;
  color: #fff !important;
  border-radius: 10rpx !important;
  background-color: #0177bf !important;
  border: none !important;
  font-size: 30rpx !important;
  line-height: 36rpx !important;
  -webkit-transition: all 0.4s !important;
  transition: all 0.4s !important;
}
.me-balance .btn-cash-withdrawal .van-button--primary {
  background-color: #d2d2d2 !important;
}

